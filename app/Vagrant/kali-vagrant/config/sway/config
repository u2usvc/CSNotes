# move floating windows with keys
bindsym $mod+m mode "move" focus floating
mode "move" {
    bindsym $mod+Tab focus right

    bindsym h     move left 150 px
    bindsym j     move down 150 px
    bindsym k     move up 150 px
    bindsym l     move right 150 px

    bindsym Shift+h     move left 500 px
    bindsym Shift+l     move right 500 px

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# switch to previous workspace
bindsym $mod+n workspace back_and_forth

# alternatively, you can use the cursor keys:
